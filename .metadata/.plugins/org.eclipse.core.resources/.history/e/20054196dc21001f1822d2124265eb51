package exer1;

public class Main {
	
	public static void main(String[] args) {
		
		Relogio relogio = new Relogio();
		Ponteiro ponteiro = new Ponteiro();
		
		String horas = relogio.acertarRelogio(3,25,50);
		
		ponteiro.posicao1 = 1;
		ponteiro.posicao2 = 5;
		ponteiro.posicao3 = 10;
		
		int hora = relogio.lerHora(ponteiro.posicao1);
		int minuto= relogio.lerMinuto(ponteiro.posicao2);
		int segundo = relogio.lerSegundo(ponteiro.posicao3);
		
		
		System.out.println(horas);
		
		System.out.println(hora+":"+minuto+":"+segundo);
	}
		
	
}
