package exer1;

public class Main {
	
	public static void main(String[] args) {
		
		Relogio relogio = new Relogio();
		
	
		relogio.acertarRelogio(3, 30, 50);
		
		System.out.println("Hora :"+relogio.ponteiroHora.posicao);
		System.out.println("Minuto :"+relogio.ponteiroMinuto.posicao);
		System.out.println("Segundos:"+relogio.ponteiroSegundo.posicao);
		
		int hora = relogio.lerHora();
		int minuto = relogio.lerMinuto();
		int segundo = relogio.lerSegundo();
		
		System.out.println("horas:"+hora+" minutos:"+minuto+" segundos:"+segundo);
		
	}	
}
